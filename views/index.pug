extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | The purpose of this website is to expose what I have created some web applications that will be listing project page of this website.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        - var link = `/project/${project.id}`;
        - var source = project.image_urls.length ? `/static/images/${project.id}/${project.image_urls[0]}` : 'https://placehold.it/550x550';
        .cell
          a(href=link)
            img.thumbnail(src=source)
            h5.title #{project.project_name}
      
